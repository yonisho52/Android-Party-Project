<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_gray"
    android:paddingBottom="15dp"
    android:orientation="vertical"
    android:paddingLeft="5sp">

    <Button
        android:id="@+id/buttonSummaryDismiss"
        android:layout_width="17dp"
        android:layout_height="25dp"
        android:layout_gravity="right"
        android:background="@drawable/button_gray"
        android:text="X"
        android:textColor="@color/very_light_gray" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="30sp">

        <TextView
            android:id="@+id/textViewSummaryDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColor="@color/blue"
            android:text="Event Details" />



        <TextView
            android:id="@+id/textViewSummaryDialogPlaceName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/very_light_gray"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewSummaryDialogCreatedBy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/very_light_gray"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewSummaryDialogNumOfRating"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/very_light_gray"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewSummaryDialogPartyCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/very_light_gray"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewSummaryDialogEventName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/very_light_gray"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewSummaryDialogEventDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/very_light_gray"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewSummaryDialogEndTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/very_light_gray"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewSummaryDialogDjName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/very_light_gray"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewSummaryDialogStartTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/very_light_gray"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewSummaryDialogWhoIsPlaying"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/very_light_gray"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewSummaryDialogEventRating"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/very_light_gray"
            android:text="TextView" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonSummaryDialogDeleteEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:autoText="false"
        android:background="@drawable/button_blue"
        android:gravity="center"
        android:text="Delete Event"
        android:textColor="@color/very_light_gray" />


</LinearLayout>