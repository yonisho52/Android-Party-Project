<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:minHeight="600dp"
    android:minWidth="200dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/under"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:orientation="vertical">

        <TextView
            android:id="@+id/malertTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawablePadding="2dp"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textSize="25sp"

            />

        <TextView
            android:id="@+id/aleartMessage"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:padding="5dp"
            android:textColor="@color/teal_700"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editTextNewEventName"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:hint="Enter event name"
                    android:inputType="text" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewcreatedBy1"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:text="Event Name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="0">

                <TextView
                    android:id="@+id/textViewWhosPlaying"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Whos playing?" />

                <Spinner
                    android:id="@+id/spinner_Dj"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:dropDownWidth="match_parent"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewCreateDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="Date:" />

                <TextView
                    android:id="@+id/editTextCreateDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="--:--" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Starting at" />

                <TextView
                    android:id="@+id/editTextStartAt"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:onClick="startTimePicker"
                    android:text="--:--" />

                <TextView
                    android:id="@+id/textViewEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Ending at" />

                <TextView
                    android:id="@+id/editTextEndAt"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:onClick="endTimePicker"
                    android:text="--:--" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="435dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Additional information:"
                    android:inputType="text" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_weight="0.001"
        android:orientation="horizontal">

        <Button
            android:id="@+id/aleartYes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:autoText="false"
            android:text="Create event" />

        <Button
            android:id="@+id/aleartNo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="3dp"
            android:text="Cancel" />


    </LinearLayout>


</LinearLayout>