<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    android:minWidth="200dp"
    android:minHeight="600dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/aleartYes"
        android:layout_width="106dp"
        android:layout_height="44dp"

        android:layout_marginStart="76dp"
        android:autoText="false"
        android:background="@drawable/button_gray"
        android:text="Create event"
        android:textAlignment="center"
        android:textColor="@color/very_light_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/under"
        app:layout_constraintVertical_bias="0.502" />

    <Button
        android:id="@+id/aleartNo"
        android:layout_width="98dp"
        android:layout_height="43dp"
        android:background="@drawable/button_gray"
        android:text="Cancel"
        android:textAlignment="center"
        android:textColor="@color/very_light_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toEndOf="@+id/aleartYes"
        app:layout_constraintTop_toBottomOf="@+id/under" />

    <LinearLayout
        android:id="@+id/under"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30sp">

        <TextView
            android:id="@+id/malertTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawablePadding="2dp"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/aleartMessage"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:padding="5dp"
            android:textColor="@color/teal_700"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editTextNewEventName"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:hint="Event name"
                    android:inputType="text" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewcreatedBy1"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:text="Event Name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="0">

                <TextView
                    android:id="@+id/textViewWhosPlaying"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Whos playing?" />

                <Spinner
                    android:id="@+id/spinner_Dj"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:dropDownWidth="match_parent"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewCreateDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:paddingRight="10sp"
                    android:text="Date:" />

                <TextView
                    android:id="@+id/editTextCreateDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:paddingLeft="10sp"
                    android:text="--:--" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5sp"
                android:paddingRight="5sp">

                <TextView
                    android:id="@+id/textViewStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Starting at" />

                <TextView
                    android:id="@+id/editTextStartAt"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:onClick="startTimePicker"
                    android:text="--:--" />

                <TextView
                    android:id="@+id/textViewEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Ending at" />

                <TextView
                    android:id="@+id/editTextEndAt"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:onClick="endTimePicker"
                    android:text="--:--" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>