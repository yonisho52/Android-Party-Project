<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_gray"
    android:paddingBottom="15dp"
    android:orientation="vertical"
    android:paddingLeft="5sp">

    <Button
        android:id="@+id/aleartNo"
        android:layout_width="17dp"
        android:layout_height="25dp"
        android:layout_gravity="right"
        android:background="@drawable/button_gray"
        android:text="X"
        android:textColor="@color/very_light_gray" />

    <LinearLayout
        android:id="@+id/under"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="15sp">

        <TextView
            android:id="@+id/malertTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawablePadding="2dp"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textSize="26dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/aleartMessage"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:padding="5dp"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextNewEventName"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:hint="Event name"
                android:inputType="text"
                android:textSize="16sp"
                android:textColor="@color/very_light_gray"
                android:textColorHint="@color/very_light_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewcreatedBy1"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:text="Event Name"
                android:textSize="16sp"
                android:textColor="@color/very_light_gray"
                android:textColorHint="@color/very_light_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_weight="0">

            <TextView
                android:id="@+id/textViewWhosPlaying"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:text="Whos playing?"
                android:textColor="@color/very_light_gray"
                android:textColorHint="@color/very_light_gray" />

            <Spinner
                android:id="@+id/spinner_Dj"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:dropDownWidth="match_parent"
                android:gravity="center"
                android:textSize="16sp"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCreateDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|right"
                android:paddingRight="10sp"
                android:text="Date:"
                android:textSize="16sp"
                android:textColor="@color/very_light_gray"
                android:textColorHint="@color/very_light_gray" />

            <TextView
                android:id="@+id/editTextCreateDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingLeft="10sp"
                android:text="--:--"
                android:textSize="16sp"
                android:textColor="@color/very_light_gray"
                android:textColorHint="@color/very_light_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5sp"
            android:paddingRight="5sp">

            <TextView
                android:id="@+id/textViewStartTime"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Starting at"
                android:textSize="16sp"
                android:textColor="@color/very_light_gray"
                android:textColorHint="@color/very_light_gray" />

            <TextView
                android:id="@+id/editTextStartAt"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:onClick="startTimePicker"
                android:text="--:--"
                android:textSize="16sp"
                android:textColor="@color/very_light_gray"
                android:textColorHint="@color/very_light_gray" />

            <TextView
                android:id="@+id/textViewEndTime"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Ending at"
                android:textSize="16sp"
                android:textColor="@color/very_light_gray"
                android:textColorHint="@color/very_light_gray" />

            <TextView
                android:id="@+id/editTextEndAt"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:onClick="endTimePicker"
                android:text="--:--"
                android:textSize="16sp"
                android:textColor="@color/very_light_gray"
                android:textColorHint="@color/very_light_gray" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/aleartYes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:autoText="false"
        android:background="@drawable/button_blue"
        android:gravity="center"
        android:paddingTop="5sp"
        android:text="Create event"
        android:textColor="@color/very_light_gray" />


</LinearLayout>